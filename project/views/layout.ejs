<!doctype html>
<!-- Website Template by freewebsitetemplates.com -->
<html>

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>
		<%= typeof title !=="undefined" ? title : '' %>
	</title>
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<link rel="stylesheet" type="text/css" href="/css/mobile.css" media="screen and (max-width : 568px)">
	<link rel="shortcut icon" type="image/png" href="/images/icons/icon-mustache.png" />
	<script type="text/javascript" src="/js/mobile.js"></script>
</head>

<body>
	<div id="header">
		<a href="/index" class="logo">
			<img src="/images/logo.jpg" alt="">
		</a>
		<ul id="navigation">
			<li class="selected">
				<a href="/index">home</a>
			</li>
			<li>
				<a href="/about">about</a>
			</li>
			<li>
				<a href="/style">gallery</a>
			</li>
			<% if (loggedIn) { %>
				<li>
					<a href="/style/favoritestyle">Favorite Style</a>
				</li>
			<% } %>
			<li>
				<a href="/blog">blog</a>
			</li>
			<li>
				<a href="/contacts/new">contact</a>
			</li>
			<% if(currentUser && currentUser.isAdmin){ %>
				<li>
					<a href="/contacts">contact requests</a>
				</li>
				<li>
					<a href="/users">Users</a>
				</li>
			<% } %>
			<li>
				<a href="/nytimes/articleSearch">Article Search</a>
			</li>
		</ul>
		<div class="login-status">
			<% if (loggedIn) { %>
				<div class="bubble logged-in">
					Welcome <%= currentUser.name.first %>
				</div>
				<div class="log-out">
					<a href="/users/logout">Log out</a>
				</div>
				<%} else {%>
					<div class="bubble log-in">
						<a href="/users/login">Log In</a>
					</div>
					<% } %>
		</div>
	</div>

	<div class="flashes">
		<% if (flashMessages) { %>
			<% if (flashMessages.success) { %>
				<div class="flash success">
					<%= flashMessages.success %>
				</div>
				<% } else if (flashMessages.error) { %>
					<div class="flash error">
						<%= flashMessages.error %>
					</div>
					<% } %>
						<% } %>
	</div>

	<div id="body">
		<%- body %>
	</div>
	<div id="footer">
		<div>
			<p>&copy; 2023 by Mustacchio. All rights reserved.</p>
			<%- include("partials/_socialmedia.ejs") %>
		</div>
	</div>
</body>

</html>